\define@key{beamerframe}{backgroundpicture}%
{%
\setbeamertemplate{background canvas}{%
  \begin{tikzpicture}[overlay, remember picture]
    % Include background image
    \node[anchor=south east, inner sep=0, outer sep=0 ] at (current page.south east)
    {
      \includegraphics[height=\paperheight] {#1}
    };
    % \fill[color=white,fill opacity=#2] (current page.north west)
    %   -- (current page.south west)
    %   -- (current page.south east)
    %   -- (current page.north east)
    %   -- cycle;
  \end{tikzpicture}%
}
}






\define@key{beamerframe}{overlayfull}%
{%
  \setbeamertemplate{background}{%
    \begin{tikzpicture}[remember picture,overlay]
      % Include background image
      \fill[color=white,fill opacity=#1] (current page.north west)
        -- (current page.south west)
        -- (current page.south east)
        -- (current page.north east);
    \end{tikzpicture}%
  }
}






\define@key{beamerframe}{overlayslantedleft}%
{%
  \setbeamertemplate{background}{%
    \begin{tikzpicture}[remember picture,overlay]
      % Include background image
      \fill[color=white,fill opacity=#1] (current page.north west)
        -- (current page.south west)
        -- ++(5.1, 0)
        -- ++(3, \paperheight)
        -- cycle;
    \end{tikzpicture}%
  }
}


\define@key{beamerframe}{overlayslantedright}%
{%
  \setbeamertemplate{background}{%
    \begin{tikzpicture}[remember picture,overlay]
      % Include background image
      \fill[color=white,fill opacity=#1] (current page.south east)
        -- (current page.north east)
        -- ++(-5.1, 0)
        -- ++(-3, -\paperheight)
        -- cycle;
    \end{tikzpicture}%
  }
}



\define@key{beamerframe}{overlaytitlepage}%
{%
  \setbeamertemplate{background}{%
    \begin{tikzpicture}[remember picture,overlay]
      % Include background image
      \fill[color=white,fill opacity=#1] (current page.north west)
        -- (current page.south west)
        -- ++(5.1, 0)
        -- ++(3, \paperheight)
        -- cycle;
    \end{tikzpicture}%

  \hspace*{7mm}\begin{minipage}[t][\textheight][c]{.7\textwidth}
    \raggedright
    \usebeamerfont{title}
    \TalkTitle

    \usebeamerfont{author}
    \vspace{2em}
    \TalkAuthor \\ \TalkInstitute

    \vspace{2em}
    \usebeamerfont{details}
    \textsc{\TalkPlace}, \TalkDate

  \end{minipage}
  }
}



\define@key{beamerframe}{overlaytoc}%
{%
  \setbeamertemplate{background}{%
    \begin{tikzpicture}[remember picture,overlay]
      \fill[color=white,fill opacity=#1] (current page.north west)
        -- (current page.south west)
        -- ++(5.1, 0)
        -- ++(3, \paperheight)
        -- cycle;
      \fill[color=white,fill opacity=1] (current page.north west)
        -- (current page.south west)
        -- ++(5.1, 0)
        -- ++(3, \paperheight)
        -- (current page.north east)
        -- (current page.south east)
        -- (current page.south west);
    \end{tikzpicture}%

    \hspace*{7mm}\begin{minipage}[t][\textheight][c]{.7\textwidth}
      \raggedright
      \usebeamerfont{title}
      \TalkTitle

      \usebeamerfont{author}
      \vspace{2em}
      \TalkAuthor \\ \TalkInstitute

      \vspace{2em}
      \usebeamerfont{details}
      \textsc{\TalkPlace}, \TalkDate

    \end{minipage}
  }
}




